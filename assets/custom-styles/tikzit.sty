\newcommand{\tikzfig}[2][1]{%
\IfFileExists{#2.tikz}
  {\scalebox{#1}{\input{#2.tikz}}}
  {%
    \IfFileExists{./figures/#2.tikz}
      {\scalebox{#1}{\input{./figures/#2.tikz}}}
      {\tikz[baseline=-0.5em]{\node[draw=red,font=\color{red},fill=red!10!white] {\textit{#2}};}}%
  }%
}
